@page
@model DFBlazor.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log In";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-4">
        <form id="account" method="post">
            <div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-denger"></span>
            </div>
            <br />
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-denger"></span>
            </div>
            <br />
            <div>
                <button id="login-submit" type="submit" class="w-100 btn btn-primary">Login</button>
            </div>
            <div>
                <small><a href="/identity/account/register">New User? Register Here</a></small>&emsp;<small><a href="~/">Go home</a></small>
            </div>
        </form>
    </div>
</div>
